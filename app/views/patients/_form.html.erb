<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :dob %>
    <%= f.input :location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to "Back", patients_path, :class => "btn" %>
  </div>
<% end %>
