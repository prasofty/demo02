<div class="page-header clearfix">
  <h4 class="pull-left">Articles</h4>
  <%= form_tag articles_path, :class => "form-search pull-right", :style => "margin-bottom:0;" do %>
      <div class="input-append">
        <%= text_field_tag :keyword, "", :class => "span2 search-query" %>
        <button type="submit" class="btn">Search</button>
      </div>
  <% end %>
</div>
<div class="row">
  <div class="span8">
    <div class="articles">
      <% @articles.each do |article| %>
        <div class="article">
          <h4 class="title clearfix">
            <%= link_to article.title.titleize, article_path(article.id)%>
            <small class="pull-right">By <%= article.user.email%> - <%= article.created_at.strftime("%b %d, %Y %H:%M") %></small>
          </h4>
          <p>
            <%= truncate(article.content,
                         :length => 100,
                         :omission => '... (continued)') %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="span4">
    <div class="btn-toolbar clearfix">
      <%= link_to "New Article", new_article_path, :class => "btn btn-primary span2", :style => "margin-left:90px;" %>
    </div>
  </div>
</div>
