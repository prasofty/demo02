<%= simple_form_for(@book) do |f| %>
  <%= f.error_messages %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, :input_html => {rows: 6} %>
    <%= f.simple_fields_for :author do |a| %>
        <%= a.input :author_name %>
    <% end%>
    <div id='pages'>
        <%= f.simple_fields_for :pages do |p| %>
            <%= p.input :page_no%>
            <%= p.input :page_info%>
            <% unless @book.new_record? %>
                <%= p.input :_destroy, :as => :boolean %>
            <% end %>
        <% end %>
    </div>
    <%= link_to "add more", add_page_books_path, :remote => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
