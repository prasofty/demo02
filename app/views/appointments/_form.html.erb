<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :doctor_id %>
    <%= f.input :patient_id %>
    <%= f.input :appointment_start_time %>
    <%= f.input :duration %>
    <%= f.input :appointment_end_time %>
    <%= f.input :closed %>
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
